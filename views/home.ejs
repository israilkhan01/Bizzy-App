<link rel="stylesheet" href="/css/home.css">
<main>
    <div id="title"> 
        <h1><%=title%></h1>
    </div>
    <div id="post-layout">
        <section>
            <div>
            <h3>Create post</h3>
            </div>
            <%if(locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" id="post-text" cols="30" rows="3" placeholder=" Write something here..." required></textarea>
               <br> <div class="sub-post"> <input type="submit" value="POST" id="post-submit"> </div>
            </form>
            <%}%>
        </section>
  
        <div class="posts">
            <ul>
            <%for(post of posts){%>
               <%-include('_post')-%>
                <%}%>
            </ul>
            </div>
    </div>
</main>
<section>
    <h4>Friends</h4>
    <div class="friend-list" style="background-color: bisque;">
        <%for(x of all_users){%>
             
              <li><a href="users/profile/<%=x.id%>"><%=x.name%></a></li>
            
            <%}%>
    </div>
</section>