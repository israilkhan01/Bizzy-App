<link rel="stylesheet" href="/css/home.css">

<div id="post-layout">
        <section class="create-post">
            <div>
            <h3>Create post</h3>
            </div>
            <%if(locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" id="post-text" cols="30" rows="3" placeholder=" Write something here..." required></textarea>
               <br> <div class="submit-post"> <input type="submit" value="POST" id="post-submit"> </div>
            </form>
            <%}%>
        
            <div class="posts">
                <ul>
                   <%for(post of posts){%>
                    <%-include('_post')-%>
                    <%}%>
                </ul>
            </div>
        </section>
    

    <section class="friends">
        <h4>Friends List</h4>
        <div class="friend-list">
            <%for(x of all_users.reverse()){%>
                <div class="friend-x">
                    <div>
                        <img src="<%= x.avatar %>" alt="<%= x.name %>" width="30" height="30">
                    </div>
                    <div class="friend">
                        <li><a href="users/profile/<%=x.id%>"><%=x.name%></a></li>
                    </div>
                </div>
                
                <%}%>
        </div>
    </section>
</div>
<script src="/js/home_posts.js"></script>
<script src="/js/home_comment.js"></script>