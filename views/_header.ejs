<link rel="stylesheet" href="/css/header.css">
<div class="head">
    
    <div class="headers">
         <a href="/" class="home">
           <div id="app-name">
              <h2>B</h2>
              <h2>BizzY</h2>
            </div>
          </a>
        <div class="user-profile">
            <% if (locals.user){%>
            
            <div  class="profile-img"> 
                <div class="search-container">
                    <form action="">
                      <input id="search",type="text" placeholder="Search.." name="search">
                      <button id="search-icon" type="submit"><i class="fa fa-search"></i></button>
                    </form>
                 </div>
                <div id="image">
                    <img src="<%=user.avatar%>" alt="profile" width="27" height="27">
                </div>
                
                <div id="name">
                    <a href="/users/profile/<%=user.id%>"> <%=user.name%></a> 
                </div>    
                <div id="message-chatbox">
                    <a href=""><i class="fas fa-envelope"></i></a>
                </div>  
                <div id="notification">
                    <a href="">
                        <i class="fa fa-bell"></i>
                    </a>
                </div>
                <div id="findfriends">
                    <a href="">
                        <i class="fas fa-user-friends"></i>
                    </a>
                </div>
            </div>
            <div class="profile-status">
                <li>
                    <a href="/users/sign-out"> sign-out</a>
                </li>
            </div>
            <%}else{%>
                <div class="offline">
                    <li>
                        <a href="/users/sign-in"> sign-in</a>
                    </li>
                    <li>
                        <a href="/users/sign-up"> sign-up</a>
                    </li>
                </div>
            <%}%>
            </div>
    </div>
</div>